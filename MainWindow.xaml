<Window x:Class="Sorting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
  <Grid>
    <StackPanel Margin="25px">
      <Grid Margin="0 0 0 24px">
        <Grid.RowDefinitions>
          <RowDefinition></RowDefinition>
          <RowDefinition Height="50px"></RowDefinition>
          <RowDefinition Height="50px"></RowDefinition>
          <RowDefinition Height="50px"></RowDefinition>
          <RowDefinition Height="50px"></RowDefinition>
          <RowDefinition Height="50px"></RowDefinition>
          <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Margin="0 0 0 20px" VerticalAlignment="Center" TextAlignment="Center" FontSize="14" FontWeight="SemiBold" FontFamily="Montserrat">Тип сортировки</TextBlock>
        <CheckBox Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center" Content="Пузырьковая" FontFamily="Montserrat"></CheckBox>
        <CheckBox Grid.Column="0" Grid.Row="2" VerticalContentAlignment="Center" Content="Вставкой" FontFamily="Montserrat"></CheckBox>
        <CheckBox Grid.Column="0" Grid.Row="3" VerticalContentAlignment="Center" Content="Быстрая" FontFamily="Montserrat"></CheckBox>
        <CheckBox Grid.Column="0" Grid.Row="4" VerticalContentAlignment="Center" Content="Шейкерная" FontFamily="Montserrat"></CheckBox>
        <CheckBox Grid.Column="0" Grid.Row="5" VerticalContentAlignment="Center" Content="Bogo" FontFamily="Montserrat"></CheckBox>
        <StackPanel Grid.Column="0" Grid.Row="6">
          <RadioButton Margin="0 0 0 2" VerticalContentAlignment="Center" Content="По возрастанию" FontFamily="Montserrat"></RadioButton>
          <RadioButton  VerticalContentAlignment="Center" Content="По убыванию" FontFamily="Montserrat"></RadioButton>
        </StackPanel>
        <TextBlock Grid.Column="1" Grid.Row="0" TextAlignment="Center" FontSize="14" FontWeight="SemiBold" FontFamily="Montserrat">Итерации</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="0" TextAlignment="Center" FontSize="14" FontWeight="SemiBold" FontFamily="Montserrat">Время</TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" FontSize="12" FontFamily="Montserrat"></TextBlock>
        <TextBlock Grid.Column="3" Grid.Row="0" TextAlignment="Center" FontSize="14" FontWeight="SemiBold" FontFamily="Montserrat">Результат</TextBlock>
      </Grid>
      <TextBlock Margin="0 0 0 8" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" FontFamily="Montserrat">Ввод</TextBlock>
      <TextBox Height="100px" Margin="0 0 0 12px" FontSize="12" FontFamily="Montserrat"></TextBox>
      <Button Height="25px" Width="150px" HorizontalAlignment="Left" FontSize="12px" FontFamily="Montserrat" FontWeight="Medium" Background="#24A1DE" Foreground="White" BorderThickness="0" Command="{Binding }" Margin="0 0 0 20">Сортировать</Button>
    </StackPanel>
  </Grid>
</Window>
